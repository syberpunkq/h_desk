<h1>Add new user</h1>

<%= form_for @user do |f| %>
 <p>
   <%= f.label :name %><br>
   <%= f.text_field :name %>
  </p>
 
  <p>
    <%= f.label :login %><br>
    <%= f.text_area :login %>
  </p>

  <p>
    <%= f.label :password %><br>
    <%= f.text_area :password %>
  </p>

  <p>
    <%= f.submit %>
  </p>

<% end %>
 